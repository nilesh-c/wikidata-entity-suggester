<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>entitysuggester</artifactId>
    <groupId>entitysuggester</groupId>
    <version>0.0.2</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>client</artifactId>
  <name>Entity Suggester Web Client</name>
  <version>0.0.2</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>entitysuggester.client.CLIEntitySuggester</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>sonatype-nexus-releases</id>
      <name>Sonatype Nexus Releases</name>
      <url>https://oss.sonatype.org/content/repositories/releases</url>
    </repository>
    <repository>
      <id>sonatype-nexus-snapshot</id>
      <name>Sonatype Nexus Snapshots</name>
      <url>https://oss.sonatype.org/content/repositories/snapshots</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>net.myrrix</groupId>
      <artifactId>myrrix-online</artifactId>
      <version>0.11</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>myrrix-common</artifactId>
          <groupId>net.myrrix</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>net.myrrix</groupId>
      <artifactId>myrrix-client</artifactId>
      <version>0.11</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>jewelcli</artifactId>
          <groupId>com.lexicalscope.jewelcli</groupId>
        </exclusion>
        <exclusion>
          <artifactId>myrrix-common</artifactId>
          <groupId>net.myrrix</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>net.myrrix</groupId>
      <artifactId>myrrix-web-common</artifactId>
      <version>0.11</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>myrrix-online-local</artifactId>
          <groupId>net.myrrix</groupId>
        </exclusion>
        <exclusion>
          <artifactId>jewelcli</artifactId>
          <groupId>com.lexicalscope.jewelcli</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>javax</groupId>
      <artifactId>javaee-web-api</artifactId>
      <version>6.0</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>

